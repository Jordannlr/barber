{% extends "base.html.twig" %}
{% block body_params %}{% endblock %}

{% block body %}

    <h2>Inscription</h2>
<div class="container">
<div class="formInscription">

    {{ form_start (formulaireIns)}}

    {{ form_row (formulaireIns.nom, {'attr': {'placeholder': "Votre nom"}, 'label': "Nom"} ) }}
    {{ form_row (formulaireIns.prenom, {'attr': {'placeholder': "Votre prénom"}, 'label': "Prénom"} ) }}
    {{ form_row (formulaireIns.email, {'attr': {'placeholder': "Votre Email"}, 'label': "Email"} ) }}
    {{ form_row (formulaireIns.password, {'attr': {'placeholder': "Votre mot de passe"}, 'label': "Mot de passe"} ) }}
    {{ form_row (formulaireIns.confirm_password, {'attr': {'placeholder': "Confirmer votre mot de passe"}, 'label': "Confirmation mot de passe"} ) }}

    <div class="form-group">
            <button type="submit" class="btn btn-success">Envoyer</button>
    </div>

    {{ form_end (formulaireIns)}}




</div>
</div>
{% endblock %}