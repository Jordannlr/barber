{% extends "base.html.twig" %}
{% block body_params %}{% endblock %}

{% block body %}

    <h2>Connexion</h2>
<div class="container">
    <form action="{{ path('connexion')}}" method="POST">
        <div class="form-group">
            <input type="text" label="Email" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <input type="password"  label="Mot de passe" required name="_password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Se connecter</button>
        </div>



    </form>
</div>

{% endblock %}